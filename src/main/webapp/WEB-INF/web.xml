<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <!-- 欢迎页面 -->
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 字符编码过滤器 -->
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 会话配置 -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- 错误页面配置 -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error/500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/jsp/error/exception.jsp</location>
    </error-page>

    <!-- Servlet配置 -->
    <!-- 登录Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hospital.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 注册Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.hospital.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 登出Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hospital.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- 患者预约提交Servlet -->
    <servlet>
        <servlet-name>PatientAppointmentServlet</servlet-name>
        <servlet-class>com.hospital.servlet.PatientAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientAppointmentServlet</servlet-name>
        <url-pattern>/patient/appointment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientAppointmentServlet</servlet-name>
        <url-pattern>/appointment</url-pattern>
    </servlet-mapping>

    <!-- 患者预约记录Servlet -->
    <servlet>
        <servlet-name>PatientAppointmentListServlet</servlet-name>
        <servlet-class>com.hospital.servlet.PatientAppointmentListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientAppointmentListServlet</servlet-name>
        <url-pattern>/patient/appointments</url-pattern>
    </servlet-mapping>

    <!-- 管理员权限过滤器 -->
    <filter>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>com.hospital.filter.AdminAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>

    <!-- 其他Servlet配置 -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.hospital.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DoctorServlet</servlet-name>
        <servlet-class>com.hospital.servlet.DoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorServlet</servlet-name>
        <url-pattern>/admin/doctor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepartmentServlet</servlet-name>
        <servlet-class>com.hospital.servlet.DepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentServlet</servlet-name>
        <url-pattern>/admin/department</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>com.hospital.servlet.AppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/admin/appointment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScheduleServlet</servlet-name>
        <servlet-class>com.hospital.servlet.ScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScheduleServlet</servlet-name>
        <url-pattern>/admin/schedule</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.hospital.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/admin/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SystemLogServlet</servlet-name>
        <servlet-class>com.hospital.servlet.SystemLogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemLogServlet</servlet-name>
        <url-pattern>/admin/log</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SystemSettingServlet</servlet-name>
        <servlet-class>com.hospital.servlet.SystemSettingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemSettingServlet</servlet-name>
        <url-pattern>/admin/setting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PatientServlet</servlet-name>
        <servlet-class>com.hospital.servlet.PatientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientServlet</servlet-name>
        <url-pattern>/patient/*</url-pattern>
    </servlet-mapping>
</web-app>